<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="0dp" />
            <solid android:color="@color/common_item_gray_bg_press" />
            <stroke android:width="1dp" android:color="@color/common_item_gray_bg_press" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <corners android:radius="0dp" />
            <solid android:color="@color/common_item_gray_bg_press" />
            <stroke android:width="1dp" android:color="@color/common_item_gray_bg_press" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <corners android:radius="0dp" />
            <solid android:color="@color/common_item_gray_bg_press" />
            <stroke android:width="1dp" android:color="@color/common_item_gray_bg_press" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="0dp" />
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/common_line_color" />
        </shape>
    </item>
</selector>