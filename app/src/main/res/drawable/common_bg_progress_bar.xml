<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="@color/common_gray_color"
                android:centerY="0.75"
                android:endColor="@color/common_gray_color"
                android:startColor="@color/common_gray_color" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/common_main_color"
                    android:centerY="0.75"
                    android:endColor="@color/common_main_color"
                    android:startColor="@color/common_main_color" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/common_main_color"
                    android:centerY="0.75"
                    android:endColor="@color/common_main_color"
                    android:startColor="@color/common_main_color" />
            </shape>
        </clip>
    </item>

</layer-list>