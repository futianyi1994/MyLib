<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/common_bg_dialog"
        android:paddingTop="@dimen/space_15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="3dp"
            android:paddingTop="3dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/common_bg_dialog"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="@dimen/space_30"
                android:paddingEnd="@dimen/space_30"
                android:paddingTop="@dimen/space_15"
                android:paddingBottom="@dimen/space_15"
                android:textColor="@color/black"
                android:textSize="@dimen/super_big_text_size"
                android:visibility="visible" />
        </LinearLayout>


        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:paddingLeft="20.0dip"
            android:paddingRight="20.0dip"
            android:paddingTop="@dimen/space_15"
            android:paddingBottom="@dimen/space_15"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:minHeight="60dp"
            android:orientation="vertical"
            android:paddingLeft="20.0dip"
            android:paddingRight="20.0dip"
            android:visibility="gone"/>

        <View
            android:id="@+id/horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:layout_marginTop="@dimen/space_15"
            android:background="#ffd0d0d0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/positiveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center"
                android:textColor="@color/common_main_color"
                android:textSize="@dimen/super_big_text_size" />

            <View
                android:id="@+id/vertical_line"
                android:layout_width="0.05dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#c4c4c4c4"
                android:visibility="visible" />

            <Button
                android:id="@+id/negativeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center"
                android:textColor="@color/common_main_color"
                android:textSize="@dimen/super_big_text_size" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>